
@using Konan.Models
@model ResetPasswordModel
@{
    ViewBag.Title = "IT Friends - Reset Password";
    Layout = null;
}
@System.Web.Optimization.Styles.Render("~/Content/css")

<link rel="shortcut icon" type="image/png" href="~/Img/logo-new-konan.png" />
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="title" content="IT Friends">
<meta name="description" content="Discover a new and modern way to use your everyday online activities. Bring and chat with your friends, share your pictures resolve programming pronlems, meet new people and more!">
<meta name="keywords" content="Ursaciuc" />
<meta name="keywords" content="Adrian" />
<meta name="keywords" content="Ursaciuc Adrian" />
<meta name="keywords" content="IT Friends" />
<meta name="keywords" content="Romania" />
<meta name="keywords" content="ursaciuc-adrian.tech" />
<meta name="author" content="Ursaciuc Adrian" />
<title>
    IT Friends - Reset Password
</title>
<style>
    body {
        background: url(../../Img/bg_01.jpg);
        background-repeat: no-repeat;
        background-position: center;
        background-position-x: -320px;
        background-attachment: fixed;
        background-size: cover;
        background-position-x: -100px;
    }
    ul {
        list-style-type: none;
        -webkit-margin-start: 0;
        -webkit-padding-start: 0;
    }
</style>
<div class="col-sm-7 l-content">
    <div class="text-center">
        <h1>Already part of our world?</h1><br /><br />
        @Html.ActionLink("SIGN IN", "SignIn", "Account", null, new { @class = "btn btn-default" })
        <br /><br /><h3>Get back in touch with your friends, stay connected to the latest news and, most importantly,<br /> express yourself - show the world who you are!</h3>

    </div>
</div>
<div class="col-sm-5 r-content">
    <div class="row">
        <div class="col-sm-12">
            @using (Ajax.BeginForm("ResetPassword", "Account", new AjaxOptions { HttpMethod = "POST", OnSuccess = "$.get('/Home/Index', function(html){$('body').html(html); })" }, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <img src="~/Img/konan-2.2.png" class="img-responsive center-block" alt="IT Friends - Logo" />
                <h1 class="text-center logo-text orange-text"></h1><br />
                <h4><i>Reset your password</i></h4>
                <br />

                <div class="form-group">
                    <div class="col-sm-12">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeHolder = "enter your new password..." })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", @placeHolder = "confirm your new password..." })
                    </div>
                </div>
                <div class="col-sm-12">
                    <p>@Html.ValidationSummary(true, "", new { @class = "form-alert bg-danger" })</p>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 text-right">
                        <input type="submit" value="RESET" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@System.Web.Optimization.Scripts.Render("~/bundles/jquery")
@System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")

